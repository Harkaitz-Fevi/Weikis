<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="programa.controller.ErabiltzaileakController" spacing="8.0" alignment="CENTER_LEFT" style="-fx-padding:10;">
    <ScrollPane prefHeight="240.0" prefWidth="900.0" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED" fitToWidth="false" fitToHeight="false">
        <content>
            <TableView fx:id="erabiltzaileak" prefHeight="240.0">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50.0" />
                    <TableColumn fx:id="colIzena" text="Izena" prefWidth="100.0" />
                    <TableColumn fx:id="colAbizena" text="Abizena" prefWidth="100.0" />
                    <TableColumn fx:id="colNAN" text="NAN" prefWidth="90.0" />
                    <TableColumn fx:id="colHelbidea" text="Helbidea" prefWidth="150.0" />
                    <TableColumn fx:id="colPosta" text="P.K." prefWidth="60.0" />
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="150.0" />
                    <TableColumn fx:id="colJaiotze" text="Jaiotze Data" prefWidth="100.0" />
                    <TableColumn fx:id="colAlta" text="Alta Data" prefWidth="100.0" />
                </columns>
            </TableView>
        </content>
    </ScrollPane>
    <HBox spacing="12.0" alignment="CENTER_LEFT" style="-fx-padding:8 0 0 0;">
        <children>
            <Button text="Kendu" mnemonicParsing="false" onAction="#kenduErabiltzailea" styleClass="form-button" />
            <Button text="Informazioa aldatu" mnemonicParsing="false" onAction="#informazioaAldatu" styleClass="form-button" />
            <Button text="Gehitu" mnemonicParsing="false" onAction="#gehituErabiltzailea" styleClass="form-button" />
        </children>
    </HBox>
</VBox>