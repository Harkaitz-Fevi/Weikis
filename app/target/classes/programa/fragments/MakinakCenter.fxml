<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="programa.controller.MakinakController" spacing="8.0" alignment="CENTER_LEFT" style="-fx-padding:10;">
    <ScrollPane prefHeight="240.0" prefWidth="600.0" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED" fitToWidth="false" fitToHeight="false">
        <content>
            <TableView fx:id="erabiltzaileak" prefHeight="240.0">
                <columns>
                    <TableColumn text="Id_makina" prefWidth="80.0" />
                    <TableColumn text="izena" prefWidth="120.0" />
                    <TableColumn text="deskribapena" prefWidth="160.0" />
                    <TableColumn text="potentzia(kw)" prefWidth="100.0" />
                    <TableColumn text="instalazio data" prefWidth="140.0" />
                </columns>
            </TableView>
        </content>
    </ScrollPane>
    <HBox spacing="12.0" alignment="CENTER_LEFT" style="-fx-padding:8 0 0 0;">
        <children>
            <Button text="Kendu" mnemonicParsing="false" onAction="#makina_kendu" styleClass="form-button" />
            <Button text="Informazioa aldatu" mnemonicParsing="false" onAction="#informazioa_aldatu" styleClass="form-button" />
            <Button text="Gehitu" mnemonicParsing="false" onAction="#makina_gehitu" styleClass="form-button" />
        </children>
    </HBox>
</VBox>